# Editor configuration, see https://editorconfig.org
root = true

[*]
charset = utf-8
indent_style = tab
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true

[*.{ts,tsx,mts,cts,js,jsx,mjs,cjs}]
quote_type = single

[*.{md,yml,yaml}]
max_line_length = off
trim_trailing_whitespace = false
indent_style = space
indent_size = 2

[*.{py}]
indent_style = space
indent_size = 4
