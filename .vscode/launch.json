{
	// Use IntelliSense to learn about possible attributes.
	// Hover to view descriptions of existing attributes.
	// For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
	"version": "0.2.0",
	"configurations": [
		{
			"name": "Current TS File",
			"type": "pwa-node",
			"request": "launch",
			"env": {
				"TS_NODE_PROJECT": "./tsconfig.json",
				"TS_NODE_TRANSPILE_ONLY": "true",
				"TS_NODE_FILES": "true"
			},
			"args": ["${relativeFile}"],
			"runtimeArgs": [
				"-r",
				"ts-node/register",
				"-r",
				"tsconfig-paths/register",
				"--max-old-space-size=8192"
			],
			"cwd": "${workspaceRoot}",
			"internalConsoleOptions": "openOnSessionStart",
			"resolveSourceMapLocations": ["${workspaceFolder}/", "!/node_modules/**"]
		},
		{
			"type": "gdb",
			"request": "launch",
			"name": "Current Rust Cargo (Unix)",
			"program": "cargo",
			"args": ["run", "--", "--workspace", "${workspaceFolder}"],
			"cwd": "${fileDirname}",
			"symbolSearchPath": "${workspaceFolder}\\target\\debug",
			"preLaunchTask": "cargo build",
			"internalConsoleOptions": "openOnSessionStart" // Focus the Debug Console on run
		},
		{
			"type": "cppvsdbg",
			"request": "launch",
			"name": "Current Rust Cargo (Windows)",
			"program": "cargo",
			"args": ["run", "--", "--workspace", "${workspaceFolder}"],
			"cwd": "${fileDirname}",
			"symbolSearchPath": "${workspaceFolder}\\target\\debug",
			"preLaunchTask": "cargo build",
			"internalConsoleOptions": "openOnSessionStart" // Focus the Debug Console on run
		},
		{
			"type": "cppvsdbg",
			"request": "launch",
			"name": "Current Rust Cargo As Release (Windows)",
			"program": "cargo",
			"args": ["run", "--release", "--", "--workspace", "${workspaceFolder}"],
			"cwd": "${fileDirname}",
			"symbolSearchPath": "${workspaceFolder}\\target\\debug",
			"preLaunchTask": "cargo build",
			"internalConsoleOptions": "openOnSessionStart" // Focus the Debug Console on run
		},
		{
			"type": "cppvsdbg",
			"request": "launch",
			"name": "Project Scaffolder",
			"program": "cargo",
			"args": [
				"run",
				"--",
				"--workspace",
				"${workspaceFolder}",
				"${input:year}",
				"${input:day}"
			],
			"cwd": "${workspaceFolder}\\scaffold",
			"symbolSearchPath": "${workspaceFolder}\\target\\debug",
			"preLaunchTask": "cargo build",
			"envFile": "${workspaceFolder}/.env/scaffold.env",
			"internalConsoleOptions": "openOnSessionStart" // Focus the Debug Console on run
		}
	],
	"inputs": [
		{
			"id": "year",
			"type": "promptString",
			"default": "2015",
			"description": "Year"
		},
		{
			"id": "day",
			"type": "promptString",
			"default": "01",
			"description": "Day"
		}
	]
}
