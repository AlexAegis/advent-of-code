{
	"tslint.alwaysShowRuleFailuresAsWarnings": true,
	"editor.formatOnSave": true,
	"editor.autoIndent": true,
	"editor.quickSuggestions": true,
	"editor.tabSize": 4,
	"editor.codeActionsOnSave": {
		"source.fixAll": true
	},
	"editor.mouseWheelZoom": true,
	"editor.wordBasedSuggestions": false,
	"material-icon-theme.folders.associations": {
		"module": "font",
		"component": "components",
		"doc": "markdown",
		"animation": "delta",
		"guard": "ngrx-effects",
		"directive": "ngrx-actions",
		"interceptor": "middleware",
		"validator": "coverage",
		"e2e": "test",
		"target": "dist",
		"rust": "delta",
		"benches": "benchmark"
	},
	"material-icon-theme.files.associations": {
		"*.animation.ts": "purescript",
		".mocharc": "mocha"
	},
	"typescript.tsdk": "node_modules\\typescript\\lib",
	"rust.build_on_save": true,
	"rust.clippy_preference": "on",
	"rust.racer_completion": true,
	"rust.show_hover_context": true,
	"files.associations": { ".mocharc": "json" },
	"mocha.files.glob": "src/**/*.spec.ts",
	"mocha.node_options": ["-r", "ts-node/register", "-r", "tsconfig-paths/register"],
	"mocha.requires": ["ts-node/register", "tsconfig-paths/register"]
}
