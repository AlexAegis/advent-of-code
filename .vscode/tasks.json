{
	// See https://go.microsoft.com/fwlink/?    LinkId=733558
	// for the documentation about the tasks.json     format
	"version": "2.0.0",
	"tasks": [
		{
			"label": "cargo build",
			"type": "shell",
			"command": "cargo build",
			"group": "build"
		},
		{
			"type": "shell",
			"label": "cargo run",
			"command": "wsl",
			"args": ["--", "~/.cargo/bin/cargo", "run"],
			"problemMatcher": ["$rustc"],
			"group": {
				"kind": "build",
				"isDefault": true
			}
		}
	]
}
