	"scripts": {
		"lin": "tslint --project",
		"lint": "tslint --project .",
		"lint:fix": "tslint --project . --fix",
		"format": "prettier --write \"src/**/*\"",
		"prettier": "npm run format",
		"test": "mocha --config ./.mocharc",
		"test:parallel": "mocha-parallel-tests --config ./.mocharc",
		"test:coverage": "nyc npm test",
		"codecov": "codecov",
		"check:updates": "ncu",
		"check:updates:update": "ncu -u"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/AlexAegis/advent-of-code/"
	},
	"categories": [
		"Other"
	],
	"license": "mit",
	"private": true,
	"dependencies": {
		"is-ci": "^2.0.0",
		"rxjs": "^6.5.3",
		"workerpool": "^5.0.2"
	},
	"devDependencies": {
		"@types/chai": "^4.2.6",
		"@types/is-ci": "^2.0.0",
		"@types/mocha": "^5.2.7",
		"@types/node": "^12.12.14",
		"@types/workerpool": "^5.0.0",
		"chai": "^4.2.0",
		"codecov": "^3.6.1",
		"mocha": "^6.2.2",
		"mocha-parallel-tests": "^2.2.2",
		"npm-check-updates": "latest",
		"nyc": "^14.1.1",
		"prettier": "^1.19.1",
		"source-map-support": "^0.5.16",
		"ts-node": "8.5.4",
		"tsconfig-paths": "^3.9.0",
		"tslint": "~5.20.1",
		"tslint-plugin-prettier": "^2.0.1",
		"typescript": "3.7.3"
	},
	"engines": {
		"node": ">= 12.13.1"
	},
	"nyc": {
		"extension": [
			".ts",
			".tsx"
		],
		"include": [
			"src/**/*.ts"
		],
		"exclude": [
			"node_modules/",
			"src/**/*.d.ts",
			"src/**/*.spec.ts",
			"src/**/deque.class.ts"
		],
		"reporter": [
			"lcov"
		],
		"all": true
	}
}
