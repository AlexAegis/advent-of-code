{
	"$schema": "https://json.schemastore.org/mocharc",
	"diff": true,
	"extension": ["spec.ts"],
	"package": "../../package.json",
	"require": [
		"ts-node/register/transpile-only",
		"tsconfig-paths/register",
		"source-map-support/register"
	],
	"recursive": true,
	"reporter": "spec",
	"slow": 75,
	"timeout": 20000,
	"ui": "bdd",
	"ignore": ["./node_modules/**/*.spec.ts"],
	"spec": "./**/*.spec.ts"
}
