{
	"name": "@alexaegis/ecs",
	"description": "A basic ECS library",
	"version": "1.0.0",
	"type": "module",
	"private": false,
	"scripts": {
		"example": "RUN=1 NODE_NO_WARNINGS=1 ts-node-esm src/example.ts",
		"lint:es": "eslint --max-warnings=0 --fix --no-error-on-unmatched-pattern .",
		"lint:tsc": "tsc --noEmit",
		"lint:format": "prettier --check .",
		"format": "prettier --write .",
		"lint:rmd": "remark --frail --quiet --no-stdout *.md",
		"test": "vitest --passWithNoTests --coverage --run",
		"test:watch": "vitest --passWithNoTests",
		"codecov": "codecov",
		"bench:open": "live-server benchmark/results/reduce.chart.html --port=8989"
	},
	"exports": {
		".": "./src/index.ts"
	},
	"dependencies": {
		"@alexaegis/advent-of-code-lib": "*",
		"terminal-kit": "^3.0.0"
	},
	"devDependencies": {
		"@types/terminal-kit": "^2.5.1",
		"markdownlint": "^0.26.2",
		"markdownlint-cli": "^0.32.2",
		"remark": "^14.0.2",
		"remark-cli": "^11.0.0",
		"remark-lint-maximum-line-length": "^3.1.2",
		"remark-preset-lint-consistent": "^5.1.1",
		"remark-preset-lint-recommended": "^6.1.2",
		"yaml-lint": "^1.7.0",
		"@commitlint/cli": "^17.3.0",
		"@commitlint/config-conventional": "^17.3.0",
		"@types/node": "^18.11.17",
		"@typescript-eslint/eslint-plugin": "^5.47.0",
		"@typescript-eslint/parser": "^5.47.0",
		"benny": "^3.7.1",
		"eslint": "^8.30.0",
		"eslint-config-prettier": "^8.5.0",
		"eslint-plugin-prettier": "^4.2.1",
		"prettier": "^2.8.1",
		"typescript": "4.9.4"
	}
}
